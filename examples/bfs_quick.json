{
  "_meta": {
    "purpose": "Quick backward-facing step test case",
    "notes": "Re_h=1000, coarse mesh for fast debugging. ER=2 gives H_inlet=h=1."
  },
  "geometry": {
    "type": "bfs",
    "step_height": 1.0,
    "expansion_ratio": 2.0,
    "upstream_length": 5.0,
    "downstream_length": 20.0,
    "y_first": 0.005,
    "Nx_upstream": 30,
    "Nx_downstream": 120,
    "Ny_inlet": 20,
    "Ny_outlet": 40,
    "mesh_type": "quad",
    "stretching": "geometric",
    "growth_rate": 1.15
  },
  "nondim": {
    "Re_tau": 1000.0,
    "use_body_force": false
  },
  "turb": {
    "model": "wilcox2006",
    "beta_star": 0.09,
    "nu_t_max_factor": 200.0,
    "omega_min": 0.1,
    "k_min": 1e-10,
    "k_max": 10.0,
    "C_lim": 0.875
  },
  "solve": {
    "dt": 0.01,
    "dt_max": 0.15,
    "dt_growth": 1.02,
    "dt_growth_threshold": 0.999,
    "t_final": 500000.0,
    "max_iter": 5000,
    "steady_tol": 1e-5,
    "enable_physical_convergence": false,
    "physical_u_bulk_rel_tol": 1e-4,
    "physical_tau_wall_rel_tol": 2.5e-3,
    "physical_convergence_start_iter": 10,
    "picard_max": 6,
    "picard_tol": 1e-4,
    "under_relax_k_omega": 0.5,
    "under_relax_nu_t": 0.3,
    "log_interval": 50,
    "snapshot_interval": 500,
    "out_dir": "examples/bfs_results"
  }
}
